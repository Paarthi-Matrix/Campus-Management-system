<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" monitorInterval="30">
  <Appenders>
    <Console name="ApplicationConsole" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%C %L - %m%n"/>
    </Console>
    <RollingFile name="RollingFile" fileName="${sys:LOG_PATH:-/var/logs}/application_log.log" filePattern="${sys:LOG_PATH:-/var/logs}/application_log-%d{yyyy-MM-dd}.log.gz">
      <PatternLayout>
        <Pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
      </Policies>
      <DefaultRolloverStrategy max="5"/>
    </RollingFile>
  </Appenders>
  <Loggers>
    <!-- Application Loggers -->
    <Logger name="com.ideas2it.cms" level="debug" additivity="false">
      <AppenderRef ref="ApplicationConsole"/>
      <AppenderRef ref="RollingFile"/>
    </Logger>

    <!-- Disable Hibernate logging -->
    <Logger name="org.hibernate" level="off" additivity="false">
      <AppenderRef ref="ApplicationConsole"/>
      <AppenderRef ref="RollingFile"/>
    </Logger>

    <!-- Root Logger -->
    <Root level="info">
      <AppenderRef ref="ApplicationConsole"/>
      <AppenderRef ref="RollingFile"/>
    </Root>
  </Loggers>
</Configuration>